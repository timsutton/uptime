{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "extends": [
        "config:base"
    ],
    "schedule": [
        "every 2 weeks on Monday"
    ],
    "group": {
        "allNonMajor": {
            "groupName": "All updates",
            "groupSlug": "all-updates",
            "matchUpdateTypes": [
                "minor",
                "patch",
                "pin",
                "digest"
            ]
        }
    }
}
